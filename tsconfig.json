{
  "compilerOptions": {
    /* Language and Module Resolution */
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Base URL and Path Mapping for aliases */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },

    /* Strictness and Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2021"],

    /* Project Inclusion */
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
